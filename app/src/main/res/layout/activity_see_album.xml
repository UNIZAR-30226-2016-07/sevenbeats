<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sevenbits.sevenbeats.SeeAlbum"
    android:background="#d1d1d1">

    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/imageViewAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/default_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/fakeView"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"/>


    <!-- Entrada para editar-->
    <TextView android:text="@string/edit_album" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_toRightOf="@+id/imageViewAlbum"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/imageViewAlbum"
        android:layout_marginTop="10dp" />

    <TextView android:id="@+id/nombreAlbum" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView5"
        android:layout_alignBottom="@+id/textView5" />


    <!-- Entrada para artista-->


    <TextView android:text="@string/artista" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewAlbum"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_marginTop="10dp"
        android:gravity="right" />

    <TextView android:id="@+id/artistaAlbum" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignBottom="@+id/textView4" />


    <!-- Entrada para genero -->

    <TextView android:text="@string/edit_genero" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/textView4"/>
    <TextView android:id="@+id/generoAlbum" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3" />

    <!-- Boton -->

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/buttonAlbum"
        android:layout_height="wrap_content"
        android:text="@string/boton_caratula"
        android:layout_alignParentTop="false"
        android:layout_alignBottom="@+id/imageViewAlbum"
        android:layout_toRightOf="@+id/imageViewAlbum"
        style="@style/ButtonText"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="false"/>


    <!-- Lista -->

    <ListView
        android:id="@+id/listSongsAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewAlbum"
        android:layout_marginTop="5dp">

    </ListView>


</RelativeLayout>
